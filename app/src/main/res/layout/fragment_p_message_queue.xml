<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:clickable="true"
                 android:background="@color/white"
                 tools:context="com.siehuai.smartdrugbox.Pharmacy.view.MessageQueue.P_MessageQueueFragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/userName"
                android:background="@color/white"
                ></android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/userName"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/field_interval_dist"
                android:layout_marginStart="@dimen/field_interval_dist"
                android:text="User Name"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/userName"
                android:layout_marginLeft="@dimen/field_interval_dist"
                android:layout_marginStart="@dimen/field_interval_dist"
                android:layout_toEndOf="@+id/userName"
                android:layout_toRightOf="@+id/userName"
                android:text="Contact"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/field_interval_dist"
                android:layout_marginStart="@dimen/field_interval_dist"
                android:layout_toEndOf="@+id/textView7"
                android:layout_toRightOf="@+id/textView7"
                android:text="Medicine"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="@dimen/field_width"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/field_interval_dist"
                android:text="Completed"
                android:textColor="@color/black"/>

        </RelativeLayout>

    </FrameLayout>
</layout>