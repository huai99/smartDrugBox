<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.siehuai.smartdrugbox.User.view.OrderMedicine.ViewRequestedMedicineDetailsFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView_medicine"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="83dp"
                    android:layout_marginRight="83dp"
                    android:layout_marginTop="36dp"
                    app:srcCompat="@drawable/placeholder"/>

                <EditText
                    android:id="@+id/editText_pharmacyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/imageView_medicine"
                    android:layout_alignStart="@+id/imageView_medicine"
                    android:layout_below="@+id/imageView_medicine"
                    android:layout_marginTop="24dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:layout_marginLeft="30dp"
                    android:focusable="false"
                    android:inputType="none"/>

                <EditText
                    android:id="@+id/editText_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/editText_pharmacyName"
                    android:layout_alignStart="@+id/editText_pharmacyName"
                    android:layout_below="@+id/editText_pharmacyName"
                    android:layout_marginTop="21dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    />

                <EditText
                    android:id="@+id/editText_contactNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/editText_price"
                    android:layout_alignStart="@+id/editText_price"
                    android:layout_below="@+id/editText_price"
                    android:layout_marginTop="22dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    />

                <EditText
                    android:id="@+id/editText_medicineName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/editText_contactNumber"
                    android:layout_alignStart="@+id/editText_contactNumber"
                    android:layout_below="@+id/editText_contactNumber"
                    android:layout_marginTop="25dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:focusable="false"
                    android:inputType="none"
                    />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/editText_pharmacyName"
                    android:layout_alignBottom="@+id/editText_pharmacyName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp"
                    android:text="Pharmacy Name"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView3"
                    android:layout_alignStart="@+id/textView3"
                    android:layout_alignTop="@+id/editText_price"
                    android:text="Price"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:text="Contact Number"
                    android:textColor="@color/black"
                    android:layout_alignTop="@+id/editText_contactNumber"
                    android:layout_alignLeft="@+id/textView4"
                    android:layout_alignStart="@+id/textView4"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:text="Medicine Name"
                    android:textColor="@color/black"
                    android:layout_alignTop="@+id/editText_medicineName"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"/>

                <EditText
                    android:id="@+id/editText_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/editText_medicineName"
                    android:layout_alignRight="@+id/editText_medicineName"
                    android:layout_below="@+id/editText_medicineName"
                    android:layout_marginTop="24dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|none"
                    android:minLines="6"
                    android:selectAllOnFocus="false"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:text="Medicine Description"
                    android:textColor="@color/black"
                    android:layout_alignTop="@+id/editText_description"
                    android:layout_alignLeft="@+id/textView6"
                    android:layout_alignStart="@+id/textView6"/>

                <EditText
                    android:id="@+id/editText_moreInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/editText_description"
                    android:layout_alignStart="@+id/editText_description"
                    android:layout_below="@+id/editText_description"
                    android:layout_marginBottom="48dp"
                    android:layout_marginTop="48dp"
                    android:background="@color/grey_200"
                    android:ems="10"
                    android:focusable="false"
                    android:gravity="top|left"
                    android:inputType="textMultiLine|none"
                    android:minLines="6"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="@dimen/view_medicine_order_details_text_width"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/textView5"
                    android:layout_alignStart="@+id/textView5"
                    android:layout_alignTop="@+id/editText_moreInfo"
                    android:layout_marginTop="26dp"
                    android:text="Medicine More Info"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/btn_acceptOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/imageView_medicine"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/imageView_medicine"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:layout_marginTop="10dp"
                    android:text="Accept order"/>

            </RelativeLayout>

        </ScrollView>


    </FrameLayout>

</layout>
