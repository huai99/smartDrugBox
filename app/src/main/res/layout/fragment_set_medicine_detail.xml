<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
    >


    <FrameLayout
        android:id="@+id/fragment_getDrugStore"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.siehuai.smartdrugbox.view.userSetMedicine.SetDetailFragment"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/text_drugStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/drug_store"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/text_medicineName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/medicine"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_pillNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/pill_number"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_take_frequency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1.87"
                        android:text="@string/frequency_of_taking"
                        android:textSize="18sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/text_compartment_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:text="@string/compartment"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <AutoCompleteTextView
                        android:id="@+id/editText_drugStore"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/underline"
                        android:completionThreshold="1"
                        android:hint="@string/example_drugstore"
                        android:inputType="textAutoComplete|textNoSuggestions"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp"
                        />

                    <AutoCompleteTextView
                        android:id="@+id/editText_medicine"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/underline"
                        android:completionThreshold="1"
                        android:hint="@string/example_medicine"
                        android:inputType="textAutoComplete|textNoSuggestions"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:id="@+id/editText_pillNumber"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/underline"
                        android:completionThreshold="1"
                        android:hint="@string/example_pill_number"
                        android:inputType="number"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:id="@+id/editText_perDayNumber"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/underline"
                        android:hint="@string/frequency_per_day"
                        android:inputType="number"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp"
                        />

                    <EditText
                        android:id="@+id/editText_compartment_number"
                        android:layout_width="140dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/underline"
                        android:hint="@string/compartment_number"
                        android:inputType="number"
                        android:textColorHint="@color/hint"
                        android:textSize="18sp"
                        />
                </LinearLayout>

            </LinearLayout>


            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                />

        </LinearLayout>

    </FrameLayout>


</layout>
