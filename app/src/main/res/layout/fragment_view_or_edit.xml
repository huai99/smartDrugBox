<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.siehuai.smartdrugbox.User.view.MedicineBox.ViewOrEditFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_view_or_edit"
        android:background="@color/white"
        android:clickable="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_view_medicine"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="231dp"
                android:text="@string/view_medicine"/>

            <Button
                android:id="@+id/btn_edit_medicine"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_view_medicine"
                android:layout_alignStart="@+id/btn_view_medicine"
                android:layout_below="@+id/btn_view_medicine"
                android:layout_marginTop="27dp"
                android:text="@string/edit_medicine"/>
        </RelativeLayout>

    </FrameLayout>

</layout>

