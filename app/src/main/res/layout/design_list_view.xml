<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_column1"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/field_interval_dist"
        android:layout_marginStart="@dimen/field_interval_dist"
        android:layout_marginTop="10dp"
        android:text="Column 1"/>

    <TextView
        android:id="@+id/text_column2"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_column1"
        android:layout_marginLeft="@dimen/field_interval_dist"
        android:layout_marginStart="@dimen/field_interval_dist"
        android:layout_toEndOf="@+id/text_column1"
        android:layout_toRightOf="@+id/text_column1"
        android:text="Column 2"/>

    <TextView
        android:id="@+id/text_column3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignTop="@id/text_column2"
        android:layout_marginLeft="@dimen/field_interval_dist"
        android:layout_marginStart="@dimen/field_interval_dist"
        android:layout_toEndOf="@+id/text_column2"
        android:layout_toRightOf="@+id/text_column2"
        android:text="Column 3"/>

    <TextView
        android:id="@+id/text_column4"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/field_interval_dist"
        android:layout_alignTop="@+id/text_column3"
        android:text="Column 4"/>
</RelativeLayout>