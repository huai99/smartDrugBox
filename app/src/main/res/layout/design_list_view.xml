<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:background="@color/white"
                android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/text_column1"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/field_interval_dist"
        android:layout_marginStart="@dimen/field_interval_dist"
        android:layout_marginTop="10dp"
        android:text="Column 1"
        android:textColor="@color/black"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/text_column2"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/text_column1"
        android:layout_alignBottom="@+id/text_column1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="Column 2"
        android:textColor="@color/black"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/text_column3"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_column1"
        android:layout_alignStart="@+id/text_column1"
        android:layout_centerVertical="true"
        android:text="Column 3"
        android:textColor="@color/black"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/text_column4"
        android:layout_width="@dimen/field_width"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_column3"
        android:layout_alignStart="@+id/text_column3"
        android:layout_below="@+id/text_column3"
        android:layout_marginTop="15dp"
        android:text="Column 4"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:visibility="invisible"/>
</RelativeLayout>